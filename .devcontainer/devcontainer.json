{
  "name": "Spring Boot + MySQL Dev Container",
  "image": "mcr.microsoft.com/devcontainers/java:17",
  "hostRequirements": {
    "cpus": 2,
    "memory": "4GB"
  },
  "features": {
    "ghcr.io/devcontainers/features/mysql:1": {
      "version": "8.0"
    },
    "ghcr.io/devcontainers/features/maven:1": {
      "version": "latest"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "pivotal.vscode-spring-boot",
        "gabrielbb.vscode-lombok"
      ]
    }
  },
  "forwardPorts": [8080, 3306],
  "postCreateCommand": "sleep 15 && sudo mysql -e \"CREATE DATABASE IF NOT EXISTS serverdb; CREATE USER IF NOT EXISTS 'serverdbadmin'@'%' IDENTIFIED BY '12345'; GRANT ALL PRIVILEGES ON serverdb.* TO 'serverdbadmin'@'%'; FLUSH PRIVILEGES;\" && mvn clean install || true",
  "portsAttributes": {
    "8080": {
      "label": "Spring Boot App",
      "onAutoForward": "notify"
    },
    "3306": {
      "label": "MySQL",
      "onAutoForward": "silent"
    }
  }
}